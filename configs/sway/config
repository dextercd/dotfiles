set $secondary-display "HDMI-A-1"

output $primary-monitor mode 2560x1440@144Hz adaptive_sync on
output $secondary-monitor mode 1920x1080@60Hz

output $primary-monitor pos 0,0
output $secondary-monitor pos 2560,0

workspace 1 output $primary-display
workspace 2 output $primary-display
workspace 3 output $primary-display
workspace 4 output $primary-display
workspace 5 output $primary-display

workspace 6 output $secondary-display
workspace 7 output $secondary-display
workspace 8 output $secondary-display
workspace 9 output $secondary-display
workspace 10 output $secondary-display


exec firefox -P default


workspace "Discord" output $secondary-display
assign [class="^discord$"] "Discord"
exec discord


workspace "Cosmic Poll" output $secondary-display
assign [class="^kitty$" instance="^Cosmic Poll$"] "Cosmic Poll"
exec kitty --name='Cosmic Poll' --hold /home/dexter/cosmic_rays/build/src/cosmic_poll/cosmic_poll --alloc-size 256MiB


